{{!-- This will be where we add our burger  --}}

<div class="container-fluid">
  <div class="row">
    <h1>Eat Burger</h1>

    <div class="col-5">
      <h2> Burger to EAT! get working skinny</h2>

      <ul>
        {{#each burger}}
          {{#unless devoured}}
            <li>
              {{name}}
              <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}" >Eat da Burgar</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-5">
        <h2>Burger EATEN, you fatty</h2>

        <ul>
          {{#each burger}}
            {{#if devoured}}
              <li>
                {{name}}
                <button class="delete-burger" data-id="{{id}}" data-newdevoured="{{devoured}}" >Throw up</button>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>

  <h2>Make your own burger, bc you are special or something...</h2>

  <form class="create-burgers">

    <div class="form-group">
        <label for="ca"> Burger Name: </label>
        <input type="text" id="ca" name="name">
    
      <button type="submit">CONJURE THE BURGER</button>
      </div>
  </form>

 </div>